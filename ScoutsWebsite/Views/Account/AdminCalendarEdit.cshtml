<script type="text/javascript">
    $(document).ready(function () {
        tinyMCE.init({
            // General options
            mode: "textareas",
            theme: "advanced",
            plugins: "paste,autolink,legacyoutput, table,emotions,iespell,inlinepopups,insertdatetime,preview,searchreplace,print,contextmenu,fullscreen,visualchars,nonbreaking,xhtmlxtras,wordcount,advlist",

            // Theme options
            theme_advanced_buttons1: "newdocument,|,bold,italic,underline,strikethrough,|,sub,sup,|,forecolor,backcolor,|,justifyleft,justifycenter,justifyright,justifyfull,formatselect,fontselect,fontsizeselect",
            theme_advanced_buttons2: "search,|,pasteword,pastetext,|,bullist,numlist,|,outdent,indent,|,undo,redo,|,charmap,emotions,image,iespell,|,insertdate,inserttime,hr,|,link,unlink,|,code,preview,|,print,fullscreen",
            theme_advanced_buttons3: "visualaid,|,tablecontrols",

            theme_advanced_toolbar_location: "top",
            theme_advanced_toolbar_align: "left",
            theme_advanced_statusbar_location: "bottom",
            theme_advanced_resizing: true,

            // Example content CSS (should be your site CSS)
            content_css: "css/content.css",

            nonbreaking_force_tab: true,


            // Drop lists for link/image/media/template dialogs
            external_link_list_url: "lists/link_list.js",
            external_image_list_url: "lists/image_list.js"
        });
        $("#CalendarItemFromHour").timepicker(
            {  hourText: 'Uren',
                minuteText: 'Minuten',
                amPmText: ['AM', 'PM']
            });
        $("#CalendarItemUntilHour").timepicker({  hourText: 'Uren',
                minuteText: 'Minuten',
                amPmText: ['AM', 'PM']
            });

    });
</script>

<div id="stylized" class="myform">
<form action="acalendaredit.aspx" method="post" id="form">
    <table>
    <tr>
    <td colspan="2"><h1>Nieuw kalenderitem aanmaken</h1>@Html.HiddenFor(x => x.CalendarItemID)</td>
    </tr>
    <tr>
    <td colspan="2"><p>Stel een nieuw kalenderitem op</p></td>
    </tr>


    <tr>
    <td>
    <label>Onderwerp
    <span class="small">Vul de omschrijving in</span>
    </label>
    </td>
    <td>@Html.EditorFor(x => x.CalendarItemTitle)</td>
    </tr>

    <tr>
    <td>
    <label>Van
    <span class="small">Activiteit van</span>
    </label>
    </td>
    <td>@Html.EditorFor(x => x.CalendarItemFromDay)@Html.TextBoxFor(x => x.CalendarItemFromHour)</td>
    </tr>
    

    <tr>
    <td>
    <label>Tot
    <span class="small">Activiteit tot:</span>
    </label>
    </td>
    <td>@Html.EditorFor(x => x.CalendarItemUntilDay)@Html.TextBoxFor(x => x.CalendarItemUntilHour)</td>
    </tr>
   
    <tr>
    <td>
    <label>Welke tak
    <span class="small">Kies een tak/groep</span>
    </label>
    </td>
    <td>@Html.DropDownListFor(x => x.CalendarItemType, ScoutsWebsite.Helpers.Utils.GetTakTypeListItems())</td>
    </tr>

    <tr>
    <td>
    <label>Inhoud
    <span class="small">Geef de inhoud van het bericht</span>
    </label>
    </td>
    <td> @Html.TextAreaFor(model => model.CalendarItemDescription, new { @class = "Supermultiline" })</td>
    </tr>

    
    <tr>
    <td></td><td>
    <div class="buttons">
		<a href="#" onclick="document.forms['form'].submit();" class="button">Opslaan</a>
	</div></td>
    </tr>

   </table>
</form>
</div>

